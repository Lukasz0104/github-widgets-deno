- const width = 275
- const height = 175

svg(width=width, height=height, xmlns="http://www.w3.org/2000/svg")
  style
    include ../assets/hevy.css
  title #{username}'s powerlifting records ðŸ’ª

  rect(x="0.5", y="0.5", rx="4.5", height="99%", stroke="#e4e2e2", width=width - 1, fill="#ececec", stroke-opacity="1")

  g(transform="translate(25, 30)")
    text(x="0", y="0", class="header") ðŸ’ª My powerlifting PRs ðŸ’ª

  - const offsetName = 25
  - const offsetWeight = 140
  - const offsetReps = 220
  - const offsetY = 12.5
  
  g(transform="translate(0, 45)", class="italic")
    text(x=offsetName, y=offsetY) exercise
    text(x=offsetWeight, y=offsetY) weight
    text(x=offsetReps, y=offsetY) reps
    path(d=`M25 17.5 L${width - offsetName} 17.5`, stroke="gray")

  g(transform="translate(0, 70)", class="result")
    text(x=offsetName, y=offsetY) Bench press
    if results.benchPress
      text(x=offsetWeight, y=offsetY) #{results.benchPress.weight} #{results.benchPress.unit}
      text(x=offsetReps, y=offsetY) #{results.benchPress.reps}

  g(transform="translate(0, 100)", class="result")
    text(x=offsetName, y=offsetY) Deadlift
    if results.deadlift
      text(x=offsetWeight, y=offsetY) #{results.deadlift.weight} #{results.deadlift.unit}
      text(x=offsetReps, y=offsetY) #{results.deadlift.reps}

  g(transform="translate(0, 130)", class="result")
    text(x=offsetName, y=offsetY) Squat
    if results.squat
      text(x=offsetWeight, y=offsetY) #{results.squat.weight} #{results.squat.unit}
      text(x=offsetReps, y=offsetY) #{results.squat.reps}
  
  g(transform="translate(0, 150)")
